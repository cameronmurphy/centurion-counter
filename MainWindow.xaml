<Window x:Class="Camurphy.CenturionCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Centurion Counter"
        Height="40"
        Width="150"
        Topmost="True"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        MouseLeftButtonDown="MouseLeftButtonDownHandler"
        KeyUp="KeyUpHandler">
    <Grid Background="Black" Cursor="SizeAll">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Viewbox>
            <TextBlock x:Name="SecondsRemainingTextBlock" Foreground="LightSkyBlue" TextAlignment="Center" VerticalAlignment="Center">10</TextBlock>
        </Viewbox>
        <Viewbox Grid.Column="1">
            <TextBlock x:Name="ShotsCompleteTextBlock" Foreground="LightGoldenrodYellow" TextAlignment="Center" VerticalAlignment="Center">100</TextBlock>
        </Viewbox>
    </Grid>
</Window>
